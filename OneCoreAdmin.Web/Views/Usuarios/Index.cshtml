@{ ViewBag.Title = "Usuarios"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<style type="text/css">
    .modal-body {
        height: 350px;
        overflow-y: auto;
        overflow-x: hidden;
    }


    .dataTables_filter {
        display: none;
    }
</style>

<script type="text/javascript">
    jQuery(function ($) {



    });
</script>

<div ng-app="onecoreadminApp" ng-controller="usuariosController" ng-cloak>
    <div class="row">
        <div class="col-xs-12">
            <h3 class="header smaller lighter blue">Administraci&oacute;n de Usuarios</h3>
            <a role="button" data-toggle="modal" class="btn btn-app btn-success" ng-click="agregarUsuario()">
                <i class="ace-icon fa fa-calendar bigger-200"></i>
                <h6>
                    Nuevo Usuario
                </h6>
            </a>
        </div>
    </div>

    <div class="hr hr-double hr-dotted hr18"></div>

    <div class="row">
        <div class="col-xs-12">
            <div>
                <div class="clearfix">
                    <div class="pull-right tableTools-container"></div>
                </div>
                <div class="table-header">
                    Usuarios Registrados
                </div>


                <table id="dynamic-table" class="table table-striped table-bordered table-hover display responsive">
                    <thead>
                        <tr>
                            <th class="hidden-480">Id Usuario</th>
                            <th class="hidden-480">Usuario</th>
                            <th class="hidden-480">Sexo</th>
                            <th class="hidden-480">Correo </th>
                            <th class="hidden-480">Estatus</th>
                            <th class="hidden-480">Fecha Creaci&oacute;n</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody></tbody>
                </table>


            </div>
        </div>
    </div>

    <div id="modalUsuarios" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">

                <form class="form-horizontal" role="form" id="usuarioForm" name="usuarioForm" ng-submit="procesar()">

                    <div class="modal-header no-padding">
                        <div class="table-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                <span class="white">&times;</span>
                            </button>
                            {{proceso}}
                        </div>
                    </div>

                    <div class="modal-body no-padding">


                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Usuario </label>

                            <div class="col-sm-9">
                                <input type="text" id="usuario" name="usuario" placeholder="Usuario" class="col-xs-10" ng-model="usuario.usuario" maxlength="50" autofocus required />
                            </div>
                        </div>

                        <div class="form-group" ng-show="pedirContrasena == true">
                            <label class="col-sm-3 control-label no-padding-right" for="proveedor">Contrase&ntilde;a </label>

                            <div class="col-sm-9">
                                <input type="password" id="contrasena" name="contrasena" placeholder="Contrasena" ng-model="usuario.contrasena" class="col-xs-10" maxlength="50" autofocus required />
                            </div>
                        </div>

                        <div class="form-group" ng-show="pedirContrasena == true">
                            <label class="col-sm-3 control-label no-padding-right" for="proveedor">Confirmar Contrase&ntilde;a </label>

                            <div class="col-sm-9">
                                <input type="password" id="confirmarcontrasena" name="confirmarcontrasena" placeholder="Confirmar Contrasena" class="col-xs-10" ng-model="usuario.confirmarcontrasena" maxlength="50" autofocus required />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Correo </label>

                            <div class="col-sm-9">
                                <input type="text" id="correo" name="correo" placeholder="Correo" class="col-xs-10" ng-model="usuario.correo" maxlength="100" autofocus required />
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Estatus </label>

                            <div class="col-sm-9">

                                <div class="radio">
                                    <label><input type="radio" id="estatusActivo" name="estatus" ng-model="usuario.estatus" >Activo</label>
                                </div>

                                <div class="radio">
                                    <label><input type="radio" id="estatusInactivo"  name="estatus" ng-model="usuario.estatus" >Inactivo</label>
                                </div>

                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Sexo </label>

                            <div class="col-sm-9">

                                <div class="radio">
                                    <label><input type="radio" id="sexoMasculino"  name="sexo" ng-model="usuario.sexo" >Masculino</label>
                                </div>

                                <div class="radio">
                                    <label><input type="radio" id="sexoFemenino" name="sexo" ng-model="usuario.sexo" >Femenino</label>
                                </div>

                            </div>

                        </div>

                    </div>

                    <div class="modal-footer no-margin-top">

                        <button class="btn btn-info pull-left" type="submit" >
                            <i class="ace-icon fa fa-floppy-o bigger-110"></i>
                            Guardar
                        </button>

                        <button class="btn btn-default pull-right" data-dismiss="modal">
                            <i class="ace-icon fa fa-times"></i>
                            Salir
                        </button>


                    </div>

                </form>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>

    <div id="dialog-confirm" class="hide">
        <p class="bigger-110 bolder center grey">
            <i class="ace-icon fa fa-hand-o-right blue bigger-120"></i>
            ¿Seguro que eliminara el registro?
        </p>
    </div>

</div>